<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="20dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:riv_corner_radius="70dp"
        android:id="@+id/ivThumbnail"
        android:contentDescription="@string/video_thumbnail"
        android:scaleType="centerCrop"
        android:layout_alignParentLeft="true"
        />

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:riv_corner_radius="20dp"
        android:id="@+id/ivUserPic"
        android:contentDescription="@string/profile_image"
        android:layout_alignBottom="@+id/ivThumbnail"
        android:layout_alignRight="@+id/ivThumbnail"
        />

    <!-- Only used for the first video to indicate users who have seen everything -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usersSeen"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/ivThumbnail"
        android:visibility="gone"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usersUnseen"
        android:orientation="horizontal"
        android:layout_alignBottom="@+id/ivThumbnail"
        android:layout_toRightOf="@+id/ivThumbnail"
        />
</RelativeLayout>
