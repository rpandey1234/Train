<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="30dp"
    card_view:cardElevation="30dp"
    android:background="@android:color/white"
    android:layout_margin="5dp"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/conversation_title"
            android:text="hello world from vidtrain"
            android:textSize="20sp"
            android:layout_marginBottom="8dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/video_count"
            android:layout_toEndOf="@+id/conversation_title"
            android:layout_alignBottom="@+id/conversation_title"
            android:paddingStart="4dp"
            android:textSize="14sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timestamp"
            android:layout_alignParentEnd="true"
            />

        <android.support.v7.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/participants_rv"
            android:layout_below="@+id/conversation_title"
            android:layout_marginBottom="8dp"
            android:layout_toStartOf="@+id/image_preview"
            android:layout_alignParentStart="true"
            />

        <ImageView
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:id="@+id/image_preview"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/image_preview"
            android:layout_below="@+id/timestamp"
            android:scaleType="centerCrop"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>
